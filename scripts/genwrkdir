#!/bin/sh
#

# genwrkdi - generate all DATA subdirectories for the BSCS Work Environment
#
# Author: Joerg Werner
#

TMP=/tmp/$$.DATA

trap ' rm -f $TMP' 0 2 3 15
PROG=`basename $0`

USAGE=">&2 echo Usage: $PROG DATA-directory; exit 1;"

gen=no

#
# for internal use only :-)
#
case "$1" in
  -g)  gen=yes; shift;;
esac

case $# in
 1) DIR=$1;;
 *) eval $USAGE
esac

[ -d "$DIR" ] || eval $USAGE

cd  $DIR
DIR=`pwd`

if [ "$gen" = "yes" ]
then
 ( cd /WORK; find . -type d -print ) > $TMP
else
  cat > $TMP <<%EOF

LOG
CEH
CEH/CEH
CEH/LOG
CLH
BGH
BGH/PRINT
BGH/LAYOUT
COH
XREF
UDH
TMP
MP
MP/LOG
MP/ERROR
MP/UTX
MP/UTX/DUPLICATE
MP/FILTER
MP/VPLMN
MP/VPLMN/S00EP
MP/VPLMN/GB0VF
MP/VPLMN/HKOSM
MP/VPLMN/D00D1
MP/VPLMN/D00D2
MP/VPLMN/CH0C1
MP/VPLMN/A00PT
MP/VPLMN/I00SI
MP/VPLMN/DK0TD
MP/VPLMN/DK0DM
MP/VPLMN/S00TR
MP/VPLMN/N00TM
MP/VPLMN/N00NC
MP/VPLMN/SF0TF
MP/REMAIN
MP/REMAIN/S00EP
MP/REMAIN/GB0VF
MP/REMAIN/I00SI
MP/TRAC
MP/TRAC/IN
MP/TRAC/IN/S00EP
MP/TRAC/IN/GB0VF
MP/TRAC/IN/D00D1
MP/TRAC/IN/I00SI
MP/TRAC/IN/A00PT
MP/TRAC/IN/CH0C1
MP/TRAC/IN/D00D2
MP/TRAC/IN/DK0DM
MP/TRAC/IN/DK0TD
MP/TRAC/IN/N00NC
MP/TRAC/IN/N00TM
MP/TRAC/IN/S00TR
MP/TRAC/IN/SF0TF
MP/TRAC/OUT
MP/TRAC/OUT/GB0VF
MP/TRAC/OUT/S00EP
MP/TRAC/OUT/I00SI
MP/TRAC/OUT/A00PT
MP/TRAC/OUT/CH0C1
MP/TRAC/OUT/D00D1
MP/TRAC/OUT/D00D2
MP/TRAC/OUT/DK0DM
MP/TRAC/OUT/DK0TD
MP/TRAC/OUT/N00NC
MP/TRAC/OUT/N00TM
MP/TRAC/OUT/S00TR
MP/TRAC/OUT/SF0TF
MP/SWITCH
MP/SWITCH/input
MP/GSMOPER
MP/GSMOPER/D00D1
MP/GSMOPER/D00D2
MP/GSMOPER/D00E1
MP/GSMOPER/D00V1
MP/ZIH
UDRAG
UDRAG/BAB
SYSTEST
SYSTEST/ERICSSON
CTRL
FG_CTRL
EDIFACT
EDIFACT/DUNNING
EDIFACT/WELCOME
EDI
EDI/COMMAND
EDI/RESPONSE
GMD
NAS
BCHTMP
SP
HTC
CREDITCARD
CREDITCARD/1
HCH
REH
REPORTS
REPORTS/ASCII
REPORTS/HTML
REPORTS/ACCRUALS
IDS_ENV
IDS_EDI
CONF
XDR
XDR/XACCT
QUEUES
DOCS
ESH
ESH/ARCHIVE
ESH/FAILED
EXPORT
EXPORT/XML
EXPORT/XSD
CRH
GLDIR
ILHINDIR
ILHOUTDIR
OUTPO
OUTIB
OUTCC
OUTDD
GLBIL
GLPAY
GL
GLEDIR

%EOF
fi

for i in `cat $TMP`
do
  [ -d "$i" ] && continue
  echo mkdir $DIR/$i
  mkdir $DIR/$i
done
